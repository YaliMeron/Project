                android:text="L" />
        </LinearLayout>

        <!-- Third Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEnter"
                style="@style/KeyboardButton"
                android:layout_width="56dp"
                android:text="ENTER" />

            <Button
